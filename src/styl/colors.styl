// Colors
$color-bg = #fff
$color-headline-text = #333
$color-body-text = #666
$color-chart-gridline = #ddd
$color-chart-meta = #999
$color-chart-axis-text = #666
$color-chart-label-text = #333
$color-chart-title-text = #000
$color-chart-zeroline = #333

$color-editor-border = #e2e2e2
$color-editor-fill = #F1F1F1
$color-editor-disabled = #999999
$color-editor-text = #333333
$color-editor-placeholder = #CACACA

$chart-colors = \
	#d17334 \
	#006da2 \
	#b93d36 \
	#245d37 \
	#875e47 \
	#926a2b \
	#c1963f \
	#544987 \
	#d0693a \
	#a82f42 \
	#339482 \
	#333 \
	#666 \
	#999 \
	#ccc

for c, i in $chart-colors
	[data-color-index=\"{i}\"]
		path
			stroke (c)
		rect
			fill (c)
		circle
			stroke (c)
			stroke-width 2px
			fill (c)

	.color-index-{i}
		fill (c)

	rect[data-color-index=\"{i}\"]
		fill (c)

	text[data-color-index=\"{i}\"]
		fill (c)

	.d4 .axis .tick text[data-color-index=\"{i}\"]
		fill (c)

	.cb-colorpicker-color-{i}
		background-color (c)

	.series-label-{i}
		color (c)

	.series-label-input-{i}
		border-bottom 2px solid (c)
		&:hover, &:focus
			border none
			border-bottom 2px solid (c)
		input
			color (c)

	.cb-toggle.toggled.toggle-{i}
		.cb-toggle-container
			background-color (c)

